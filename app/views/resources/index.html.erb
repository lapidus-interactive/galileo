<div class="container">
<div class="row"><div class="columnl"><%= link_to "Add Resource", new_resource_path,:class=>'btn btn btn-primary',:style=>'color:white; background-color:#4B99AD' %>
</div><div class="columnr">
<%= form_tag(resources_path, method: :get) do %>
  Search: <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'Search', name: nil, :class => 'btn btn btn-primary' %>
<% end %></div></div>
<hr>
<% if (@resources.size==0) %>
    No results were returned.
  <% end %>
  <ul>
  <% @resources.each do |resource| %>
    <h4>
     <li><%= link_to resource.name, resource_path(resource) %>
       <%
          @my_entry = Resource.where(id: resource.id, user_id: current_user.id).first
          if (not @my_entry.blank?) %>
            <small>(<%= link_to "Edit", edit_resource_path(@my_entry) %> | <%= link_to "Delete", resource_path(@my_entry), method: :delete, data: { confirm: "Are you sure?"} %>)</small>
         <% end %>
         <% if resource.url_preview.present? %>
           <br><%== resource.url_preview.gsub('\"','"').gsub("\\'", "'") %>
         <% end %>
     </li></h4>
  <% end %>
  </ul>
  <% if @total_count>50 then %> <%== pagy_bootstrap_nav(@pagy) %> <% end %>
</div>
