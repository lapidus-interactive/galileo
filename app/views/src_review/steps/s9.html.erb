
        <div class="form-claim">
        <div class="sidenav">
      <%= form_for @src_review, method: :put, url: wizard_path do |f| %>
        <big>Claim review steps:</big><br>
        <div class="divTable blueTable"><div class="divTableBody">
         <% 
          passed_step=false
          @all_steps.each do |key,value| %>
              <%= is_visible(key).html_safe %><div class="divTableCell">
              <% if (step==File.basename(wizard_path(key)))
                  passed_step=true %>
                  <b>-&gt; <%= value %></b>
              <% elsif passed_step %>
                  <%= f.submit value, style: 'color:#FFFFFF;width:100%;text-align:left' %>
              <% else %>
                  <%= f.submit value, style: 'color:#C0C0C0;width:100%;text-align:left' %>
              <% end %>
              </div></div>
         <% end %>
      </div>
      </div>
      </div>
      <div class="main">
              <h4>Reviewing source:
                   <%= link_to @src.name, src_path(@src.id) %></h4>
                <% if (not @src.url.blank?) %>
                   <%== "URL: <input type='text' id='url_link' value='"+@src.url.to_s+"' style='background-color:lightgrey;width:75%'> <button onclick=copyToClipboard('#url_link')>Copy</button>" %>
                <% else %>
                   URL: Not provided
                <% end %>
              <br> 
              <% if f.object.errors.any? %>
              <div class="error_messages">
                  <% f.object.errors.full_messages.each do |error| %>
                    <p><%= error %></p>
                  <% end %>
              </div>
              <% end %>
              <fieldset>
                <h5><strong>Sharing your source review</strong></h5>
                  <ul>
                      
                  <li>Do you wish to share your review of this source?<span class='required'>*</span>
                  <br><%= f.radio_button :src_review_sharing_mode, '1', :checked => (!@src_review.src_review_sharing_mode.blank? && @src_review.src_review_sharing_mode==1) %> Yes<br><%= f.radio_button :src_review_sharing_mode, '-1', :checked => (!@src_review.src_review_sharing_mode.blank? && @src_review.src_review_sharing_mode==-1) %>  No<br><br><%= f.radio_button :src_review_sharing_mode, '', :checked => (@src_review.src_review_sharing_mode.blank?) %> Skip this question<br>
                  
                  <br>
                  
                  </li>
          
                  <li>Optional note
                  <%= f.text_area(:note_src_review_sharing_mode, size: '50x10', class: 'field-long field-textarea') %>
                  
                  <br>
                  
                  </li>
          
                    <li>
                      <%= link_to 'Previous Step',previous_wizard_path+'?s=prev',:class=>'btn btn btn-primary',:style=>'color:white; background-color:#4B99AD' %>
&nbsp;&nbsp;&nbsp;<%= f.submit 'Finish', :class => 'btn btn btn-primary' %>
                    </li>
                  </ul>
              </fieldset>
              <% end %>
              </div>
              