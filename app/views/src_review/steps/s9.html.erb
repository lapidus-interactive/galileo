
              <h3>Reviewing src:
                <% if (not @src.url.blank?) %>
                   <%= link_to @src.name, src_path(@src.id) %>
                <% else %>
                  <%= @src.name %>
                <% end %>
              </h3> 
              <div class="form-claim">
              <% if current_user.id==1 %>
                  <h4><% all_steps=['s1', 's2', 's3', 's4', 's5', 's6', 's7', 's8', 's9']; %>
                  <% for i in 0 ... all_steps.size %>
                      <% if (step==File.basename(wizard_path(all_steps[i]))) %>
                          <font size=20>Step <%= (i+1) %></font>
                      <% else %>
                          <%= link_to (i+1).to_s+' ', wizard_path(all_steps[i]) %>
                      <% end %>
                  <% end %>
                  </h4>
                  <hr>
              <% end %>

              <%= form_for @src_review, method: :put, url: wizard_path do |f| %>
              <% if f.object.errors.any? %>
              <div class="error_messages">
                  <% f.object.errors.full_messages.each do |error| %>
                    <p><%= error %></p>
                  <% end %>
              </div>
              <% end %>
              <fieldset>
                <legend>3) Sharing your source review</legend>
                  <ul>
                      
                  <li>Do you wish to share your review of this source?<span class='required'>*</span>
                  <%= f.select :src_review_sharing_mode, options_for_select([['Select',''],['Yes', 1],[' No', -1]], :selected => @src_review.src_review_sharing_mode) %>
                  <br>
                  
                  </li>
          
                  <li>Optional note
                  <%= f.text_area(:note_src_review_sharing_mode, size: '50x10', class: 'field-long field-textarea') %>
                  <br>
                  
                  </li>
          
                    <li>
                      <%= link_to 'Previous Step',previous_wizard_path,:class=>'btn btn btn-primary',:style=>'color:white; background-color:#4B99AD' %>
&nbsp;&nbsp;&nbsp;<%= f.submit 'Finish', :class => 'btn btn btn-primary' %>
                    </li>
                  </ul>
              </fieldset>
              <% end %>
              </div>
              