
        <div class="form-claim">
        <div class="sidenav">
      <%= form_for @claim_review, method: :put, url: wizard_path do |f| %>
        <big>Claim review steps:</big><br>
        <div class="divTable blueTable"><div class="divTableBody">
         <% 
          passed_step=false
          @all_steps.each do |key,value| %>
              <%= is_visible(key).html_safe %><div class="divTableCell">
              <% if (step==File.basename(wizard_path(key)))
                  passed_step=true %>
                  <b>-&gt; <%= value %></b>
              <% elsif passed_step %>
                  <%= f.submit value, style: 'color:#FFFFFF;width:100%;text-align:left' %>
              <% else %>
                  <%= f.submit value, style: 'color:#C0C0C0;width:100%;text-align:left' %>
              <% end %>
              </div></div>
         <% end %>
      </div>
      </div>
      </div>
      <div class="main">
              <h4>Reviewing claim:
                   <%= link_to @claim.title, claim_path(@claim.id) %></h4>
                <% if (not @claim.url.blank?) %>
                   <%== "URL: <input type='text' id='url_link' value='"+@claim.url.to_s+"' style='background-color:lightgrey;width:75%'> <button onclick=copyToClipboard('#url_link')>Copy</button>" %>
                <% else %>
                   URL: Not provided
                <% end %>
              <br> 
                <br><div style='border:2px solid black;margin:auto;width:70%;padding:10px;background-color:lightblue;'><b><big>NOTE </big></b><b> that you don't need to answer all questions!</b><br>If you are ready to assess the claim, simply click on the <b><big>Reviewer Assessment</big></b> step to the left (one before the last) and mark your verdict.</div><br>
              <% if f.object.errors.any? %>
              <div class="error_messages">
                  <% f.object.errors.full_messages.each do |error| %>
                    <p><%= error %></p>
                  <% end %>
              </div>
              <% end %>
              <fieldset>
                <h5><strong>Reviewing Image in the claim</strong></h5>
                  <ul>
                      
                  <li>Since the claim contains an image, do you wish to review it?
                  <br><%= f.radio_button :img_review_started, '1', :checked => (!@claim_review.img_review_started.blank? && @claim_review.img_review_started==1) %> Yes<br><%= f.radio_button :img_review_started, '-1', :checked => (!@claim_review.img_review_started.blank? && @claim_review.img_review_started==-1) %>  No<br><br><%= f.radio_button :img_review_started, '', :checked => (@claim_review.img_review_started.blank?) %> Skip this question<br>
                  <br>
                  
                  </li>
          
                    <li>
                      <%= f.submit 'Next Step', :class => 'btn btn btn-primary' %>
                    </li>
                  </ul>
              </fieldset>
              <% end %>
              </div>
              