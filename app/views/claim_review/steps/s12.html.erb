<!-- Heading -->
<div class="text-center mb-5">
  <div class="col-12 col-md-10 col-lg-8 mx-auto">
    <h4>Youâ€™re fact-checking a claim</h4>
    <h2 class="text-primary"> <%= @claim.title %></h2>
  </div>
</div>
<!-- Heading -->
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= form_for @claim_review, method: :put, url: wizard_path do |f| %>
        <div class="">
          <div class="">
            <% 
              passed_step=false
              @all_steps.each do |key,value| %>
              <%= is_visible(key).html_safe %>
              <% if (step==File.basename(wizard_path(key)))
                      passed_step=true %>
              <b><%== value %></b>
            <% elsif passed_step %>
              <%= f.submit value, style: '', class: 'no-style' %>
            <% else %>
              <%= f.submit value, style: '' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-9">
    <% if (not @claim.url.blank?) %>
    <% else %>
      URL: <%= t('not_provided') %>
    <% end %>
    <br>
    <br>
    <% if f.object.errors.any? %>
      <div class="error_messages">
        <% f.object.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
      </div>
    <% end %>
    <fieldset>
      <h6><%== t('reviewing_txt_claim_title') %></h6>
      <h4><%== t('claim_txt_review_started_q_long') %></h4>
      <%= f.radio_button :txt_review_started, '1', :checked => (!@claim_review.txt_review_started.blank? && @claim_review.txt_review_started==1) %>
      <%== t('claim_txt_review_started_q_options_yes') %><br>
      <%= f.radio_button :txt_review_started, '-1', :checked => (!@claim_review.txt_review_started.blank? && @claim_review.txt_review_started==-1) %>
      <%== t('claim_txt_review_started_q_options_no') %><br>
      <br>
      <%= f.radio_button :txt_review_started, '', :checked => (@claim_review.txt_review_started.blank?) %>
      <%= t('skip_question') %><br>
      <br>
      <% if !@first_step.present? or @first_step!=step %>
        <%= f.submit t('previous_step'), :class => 'btn btn btn-primary' %>
      <% end %>
      <%= f.submit t('next_step'), :class => 'btn btn btn-primary' %>
    </fieldset>
  <% end %>
  <%= link_to t('del_review'), claim_claim_review_path(@claim.id,@claim_review), style: 'font-size:12px;', method: :delete, data: { confirm: t('warning_del') } %>
</div>
</div>
</div>
